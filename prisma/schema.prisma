generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id        String   @id @default(uuid())
  title     String
  content   String
  theme     String?
  pinned    Boolean  @default(false)
  order     Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
